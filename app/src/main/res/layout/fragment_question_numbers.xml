<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/question_numbers_text"
                fontPath="Poppins-Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingPrefix"
                tools:text="What color the sky has?"/>


            <TextView
                android:id="@+id/question_numbers_value"
                fontPath="Poppins-ExtraBold.ttf"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/question_numbers_keyboard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_numbers_text"
                tools:ignore="MissingPrefix"
                tools:text="1341"/>

            <TableLayout
                android:id="@+id/question_numbers_keyboard"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <TableRow
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_numbers_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>


                </TableRow>

                <TableRow
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_numbers_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>


                </TableRow>

                <TableRow
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_numbers_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <TextView
                        android:id="@+id/question_numbers_9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>


                </TableRow>

                <TableRow
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_numbers_0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/text_color_important"
                        android:textSize="40dp"/>

                    <ImageView
                        android:id="@+id/question_numbers_erase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:src="@drawable/ic_backspace"
                        />

                    <ImageView
                        android:id="@+id/question_numbers_continue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:src="@drawable/ic_send"
                        />


                </TableRow>
            </TableLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>