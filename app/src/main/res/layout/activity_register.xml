<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parts.login.LoginActivity">

    <io.github.boldijar.cosasapp.base.Tulbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="Register" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_logo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="Full name"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/login_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="@string/email"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:maxLines="1"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="@string/password"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_color" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="Location"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/login_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_color" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="Gender"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/login_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:entries="@array/gender"
                            android:paddingTop="28dp"
                            android:paddingBottom="28dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="Age"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/login_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/text_color" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="Radius"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/login_radius"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="number"
                            android:max="100"
                            android:maxLines="1"
                            android:min="0"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:progress="30"
                            android:textColor="@color/text_color" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".3"
                        android:background="@color/text_color_secondary" />

                    <TextView
                        android:id="@+id/login_continue"
                        fontPath="Poppins-Black.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Register"
                        android:textColor="@color/text_color_important"
                        android:textSize="16sp"
                        tools:ignore="MissingPrefix" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>